@model IEnumerable<SanPham>

<div class="table">
	<table>
		<thead>
			<tr>
				<th>Tên Sản Phẩm</th>
				<th>Mô tả</th>
				<th>Giá tiền</th>
				<th>Hình Ảnh</th>
				<th>Tên Thể Loại</th>
				<th>Chức Năng</th>
			</tr>
		</thead>
		<tbody>
			@foreach(var item in @Model)
			{
				<tr>
					<td>@item.Name</td>
					<td>@item.Description</td>
					<td>@item.price</td>
					<td><img src="@item.ImageUrl" width="50px"/></td> 
					<td>@item.TheLoai.Name</td>
					<td>
						<a asp-action="Upsert" asp-route-id="@item.Id">Edit</a>
						<a href="#">Details</a>
						<a hred="#">Delete</a>
					</td>
				</tr>
			}
		</tbody>
	</table>
	<a asp-controller="SanPham" asp-action="Upsert" class="btn btn-primary">Thêm mới</a>
</div>